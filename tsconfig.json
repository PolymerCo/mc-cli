{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2021", "DOM"],
    "module": "CommonJS",
    "target": "ES2022",
    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}